<resources>

    <style name="text_view_info">
        <item name="android:gravity">center</item>
        <item name="android:textColor">?color</item>
    </style>

    <style name="edit_text_number_input">
        <item name="android:gravity">center</item>
        <item name="android:textColor">?color</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5sp</item>
        <item name="android:layout_marginBottom">5sp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="about_topic">
        <item name="android:gravity">center</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="about_content">
        <item name="android:gravity">center</item>
    </style>

    <style name="about_button">
        <item name="android:layout_marginEnd">50sp</item>
        <item name="android:layout_marginStart">50sp</item>
        <item name="android:layout_marginTop">20sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="about_button_landscape">
        <item name="android:layout_marginEnd">50sp</item>
        <item name="android:layout_marginStart">50sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="oldTextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="seekBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">5sp</item>
        <item name="android:layout_marginEnd">5sp</item>
    </style>


    <style name="oldLinearLayoutGroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">25dp</item>
        <item name="android:orientation">vertical</item>

    </style>


    <style name="newLinearLayoutGroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

</resources>