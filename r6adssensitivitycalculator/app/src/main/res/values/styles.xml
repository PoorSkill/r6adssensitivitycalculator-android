<resources>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="text_view_info">
        <item name="android:gravity">center</item>
        <item name="android:textColor">?color</item>
    </style>

    <style name="edit_text_number_input">
        <item name="android:gravity">center</item>
        <item name="android:textColor">?color</item>
    </style>

    <style name="image_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_margin">50dp</item>
    </style>

    <style name="about_topic">
        <item name="android:gravity">center</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="about_content">
        <item name="android:gravity">center</item>
    </style>

    <style name="about_button">
        <item name="android:layout_marginEnd">50sp</item>
        <item name="android:layout_marginStart">50sp</item>
        <item name="android:layout_marginTop">20sp</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>