<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/motionLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:fitsSystemWindows="true"
    tools:context=".ui.main.MainActivity">

    <TextView
        android:id="@+id/oldAdsTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="OLD ADS"
        app:layout_constraintBottom_toTopOf="@+id/oldAdsSeekBar"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editAds"
        style="@style/edit_text_number_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:text="@string/_20"
        app:layout_constraintBottom_toTopOf="@+id/oldAdsSeekBar"
        app:layout_constraintTop_toBottomOf="@+id/oldAdsTV" />

    <SeekBar
        android:id="@+id/oldAdsSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/dividerAdsFov"
        app:layout_constraintTop_toBottomOf="@+id/editAds" />

    <View
        android:id="@+id/dividerAdsFov"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toTopOf="@+id/oldFovTV"
        app:layout_constraintTop_toBottomOf="@+id/oldAdsSeekBar" />

    <TextView
        android:id="@+id/oldFovTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="OLD FOV"
        app:layout_constraintBottom_toTopOf="@+id/editFov"
        app:layout_constraintTop_toBottomOf="@+id/dividerAdsFov" />

    <EditText
        android:id="@+id/editFov"
        style="@style/edit_text_number_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:inputType="number"
        android:text="@string/_20"
        app:layout_constraintBottom_toTopOf="@+id/oldFovSeekBar"
        app:layout_constraintTop_toBottomOf="@+id/oldFovTV" />

    <SeekBar
        android:id="@+id/oldFovSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/dividerFovAspect"
        app:layout_constraintTop_toBottomOf="@+id/editFov" />

    <View
        android:id="@+id/dividerFovAspect"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toTopOf="@+id/oldAspectRatio"
        app:layout_constraintTop_toBottomOf="@+id/oldFovSeekBar" />

    <TextView
        android:id="@+id/oldAspectRatio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Aspect Ratio"
        app:layout_constraintBottom_toTopOf="@+id/aspectRatioSpinner"
        app:layout_constraintTop_toBottomOf="@+id/dividerFovAspect" />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/aspectRatioSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/oldAspectRatio" />

    <Button
        android:id="@+id/btnCalculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_calculate"
        android:textColor="?color"
        app:layout_constraintBottom_toBottomOf="parent" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?background"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ads0_row"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:background="@drawable/custom_border"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_view_info"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="@string/ads_1"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView

                    style="@style/text_view_info"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:text="@string/equals"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/output_ads_0"
                    style="@style/edit_text_number_input"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ads1_row"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:background="@drawable/custom_border"
